<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Us - Wanderlust Adventures</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        /* Style for the success pop-up */
        #success-popup {
            position: fixed;
            bottom: 20px;
            right: 20px;
            background-color: white; 
            color: #333; 
            padding: 15px 20px;
            border-radius: 8px; 
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15); 
            opacity: 0;
            visibility: hidden;
            transition: opacity 0.3s ease-in-out, visibility 0s linear 0.3s;
            z-index: 1000; 
            width: 300px; 
            box-sizing: border-box; 
            display: flex;
            flex-direction: column;
            align-items: flex-start; 
            gap: 8px; 
        }

        #success-popup.show {
            opacity: 1;
            visibility: visible;
            transition-delay: 0s;
        }

        #success-popup h3 {
            margin-top: 0; 
            font-size: 1em;
            font-weight: bold;
            margin-bottom: 2px;
        }

        #success-popup button.close-button {
            position: absolute;
            top: 5px;
            right: 5px;
            background: none;
            border: none;
            color: #777;
            font-size: 1.2em;
            cursor: pointer;
        }

        #success-popup button.close-button:hover {
            color: #333;
        }
    </style>
</head>
<body>
    <%- include('partials/header') %>

    <div class="container contact-page">
        <h1>Get In Touch</h1>
        <div class="contact-grid">
            <div class="contact-form">
                <h2>Send Us a Message</h2>
                <p>Fill out the form below and we'll get back to you.</p>
                <form id="contactForm" action="/contact" method="POST">
                    <div class="form-group">
                        <label for="name">Name:</label>
                        <input type="text" id="name" name="name" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input type="email" id="email" name="email" required>
                    </div>
                    <div class="form-group">
                        <label for="subject">Subject:</label>
                        <input type="text" id="subject" name="subject">
                    </div>
                    <div class="form-group">
                        <label for="message">Message:</label>
                        <textarea id="message" name="message" rows="5"></textarea>
                    </div>
                    <button type="submit" class="button">Send Message</button>
                </form>
            </div>
            <div class="contact-info">
                <h2>Contact Information</h2>
                <p>Have questions or need assistance? Reach out to us directly.</p>
                <div class="info-item">
                    <i class="fas fa-envelope"></i>
                    <p>Email: <a href="mailto:info@wanderlustadventures.com">info@wanderlustadventures.com</a></p>
                </div>
                <div class="info-item">
                    <i class="fas fa-phone"></i>
                    <p>Phone: +1 (234) 567-890</p>
                </div>
                <div class="info-item">
                    <i class="fas fa-map-marker-alt"></i>
                    <p>Address: 123 Adventure Ave, Travel City, World 54321</p>
                </div>
            </div>
        </div>
    </div>

    <div id="success-popup"></div>

    <%- include('partials/footer') %>

    <script>
        const contactForm = document.getElementById('contactForm');
        const successPopup = document.getElementById('success-popup');

        contactForm.addEventListener('submit', function(event) {
            event.preventDefault(); 

            const formData = new FormData(contactForm);

            fetch('/contact', {
                method: 'POST',
                body: formData,
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    successPopup.innerHTML = `
                        <h3>Message Sent!</h3>
                        <p>${data.success}</p>
                        <button class="close-button" onclick="document.getElementById('success-popup').classList.remove('show')">&times;</button>
                    `;
                    successPopup.classList.add('show');
                    setTimeout(() => {
                        successPopup.classList.remove('show');
                        successPopup.innerHTML = ''; 
                        contactForm.reset();
                    }, 5000); 
                } else if (data.error) {
                    console.error('Error sending message:', data.error);
                    successPopup.innerHTML = `
                        <div style="background-color:#f44336; color:white; padding:10px; border-radius:5px;">
                            Error: ${data.error}
                            <button class="close-button" onclick="document.getElementById('success-popup').classList.remove('show')">&times;</button>
                        </div>
                    `;
                    successPopup.classList.add('show');
                    setTimeout(() => {
                        successPopup.classList.remove('show');
                        successPopup.innerHTML = '';
                    }, 5000);
                }
            })
            .catch(error => {
                console.error('Fetch error:', error);
                successPopup.innerHTML = `
                    <div style="background-color:#f44336; color:white; padding:10px; border-radius:5px;">
                        Error: Could not send message. Please try again.
                        <button class="close-button" onclick="document.getElementById('success-popup').classList.remove('show')">&times;</button>
                    </div>
                `;
                successPopup.classList.add('show');
                setTimeout(() => {
                    successPopup.classList.remove('show');
                    successPopup.innerHTML = '';
                }, 5000);
            });
        });
    </script>
</body>
</html>