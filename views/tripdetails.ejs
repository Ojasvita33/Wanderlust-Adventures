<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %> | Wanderlust Adventures
    </title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        /* Trip Details Page - Updated */
        .trip-details {
            display: grid;
            grid-template-columns: 1fr;
            gap: 20px;
        }

        .trip-details .image-container {
            position: relative;
            border-radius: 8px;
            overflow: hidden;
            margin-bottom: 20px;
        }

        .trip-details .image-container img {
            width: 100%;
            max-height: 500px;
            object-fit: cover;
            display: block;
        }

        .trip-details .image-overlay {
            position: absolute;
            bottom: 0;
            left: 0;
            color: white;
            background: linear-gradient(to top, rgba(0, 0, 0, 0.7), transparent);
            padding: 15px;
            width: 100%;
            text-align: center;
        }

        .trip-details .image-overlay h2 {
            margin-bottom: 5px;
            font-size: 3rem;
            font-weight: 800;
            color: hsl(40 90% 60%);
            text-shadow: 2px 2px #333;
        }

        .trip-details .image-overlay p {
            font-size: 1em;
            color: white;
            text-shadow: 1px 1px #333;
        }

        .trip-details .details-grid {
            display: grid;
            grid-template-columns: 2fr 1fr;
            gap: 30px;
            align-items: start;
        }

        .trip-details .itinerary-box h2,
        .trip-details .trip-details-box h2 {
            margin-top: 0;
            margin-bottom: 10px;
            border-bottom: 2px solid #eee;
            padding-bottom: 5px;
            color: hsl(190 80% 45%);
        }

        .trip-details .itinerary-box ul,
        .trip-details .trip-details-box ul {
            list-style: disc;
            padding-left: 20px;
        }

        .trip-details .itinerary-box li,
        .trip-details .trip-details-box li {
            margin-bottom: 5px;
            color: #555;
        }

        .trip-details .booking-info-box {
            box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.364);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 20px;
            border: 1px solid #eee;
            border-radius: 8px;
            margin-bottom: 20px;
            background-color: #fdfbf8;
        }

        .trip-details .booking-info-box .price {
            color: hsl(190 80% 45%);
            font-size: 1.5em;
            font-weight: bold;
            text-align: center;
            margin-bottom: 5px;
        }

        .trip-details .booking-info-box .price span {
            font-size: 2em;
        }

        .trip-details .booking-info-box h3 {
            text-align: center;
            color: #555;
            font-weight: normal;
            margin-bottom: 15px;
        }

        .trip-details .booking-info-box .button.book-now-btn {
            background-color: hsl(40 90% 60%);
            color: black;
            padding: 12px 25px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1em;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

        /* Updated styling for "Proceed to Payment" button */
        .trip-details .booking-info-box .button.primary {
            background-color: hsl(222, 78%, 45%);
            color: rgb(255, 255, 255);
            padding: 12px 25px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1em;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

        .trip-details .booking-info-box .button.primary:hover {
            background-color: hsl(190 80% 45%);
        }

        .trip-details .booking-info-box .button.book-now-btn:hover {
            background-color: hsl(40 80% 50%);
        }

        .trip-details .booking-info-box p.need-help {
            text-align: center;
            font-size: 0.9em;
            margin-top: 15px;
        }

        .trip-details .booking-info-box p.need-help a {
            color: hsl(190 80% 45%);
            text-decoration: none;
        }

        .trip-details .booking-info-box p.need-help a:hover {
            text-decoration: underline;
        }

        .trip-details .trip-details-box ul {
            list-style: none;
            padding-left: 0;
        }

        .trip-details .trip-details-box li {
            margin-bottom: 8px;
            color: #555;
        }

        .trip-details .trip-details-box li strong {
            font-weight: bold;
            color: #333;
        }

        #calendar-modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            justify-content: center;
            align-items: center;
        }

        .calendar-content {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            width: 80%;
            max-width: 400px;
            position: relative;
        }

        .calendar-header {
            display: flex;
            justify-content: space-between;
            margin-bottom: 4px;
        }

        .calendar-header button {
            border-width: 0px;
        }

        .calendar-body {
            display: grid;
            grid-template-columns: repeat(7, 1fr);
            gap: 5px;
        }

        .calendar-day {
            padding: 8px;
            text-align: center;
            border: 1px solid #eee;
            cursor: pointer;
        }

        .calendar-day.disabled {
            color: #ccc;
            cursor: not-allowed;
        }

        .calendar-day.selected {
            background-color: hsl(190 80% 45%);
            color: white;
        }

        #selected-date-display {
            margin-top: 1px;
            font-weight: bold;
        }

        /* Updated Banner Styling for Auto-Scrolling (JavaScript) */
        .image-container {
            position: relative;
            border-radius: 8px;
            overflow: hidden;
            margin-bottom: 20px;
            height: 500px;
        }

        .image-overlay {
            position: absolute;
            bottom: 0;
            left: 0;
            color: white;
            background: linear-gradient(to top, rgba(0, 0, 0, 0.7), transparent);
            /* Gradient from bottom */
            padding: 15px;
            width: 100%;
            text-align: center;
            z-index: 10;
        }

        .image-overlay h2 {
            margin-bottom: 5px;
            font-size: 3rem;
            font-weight: 800;
            color: hsl(40 90% 60%);
            text-shadow: 2px 2px #333;
        }

        .image-overlay p {
            font-size: 1em;
            color: white;
            text-shadow: 1px 1px #333;
        }

        .image-slider {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }

        .image-slider img {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            opacity: 0;
            transition: opacity 1s ease-in-out;
        }

        .image-slider img.active {
            opacity: 1;
        }

        /* Mobile Responsive Design */
        @media (max-width: 768px) {

            /* Trip Details Section */
            .trip-details {
                grid-template-columns: 1fr;
                /* Stack everything vertically on small screens */
                padding: 20px;
            }

            .image-container {
                height: 300px;
                /* Make the image smaller on mobile */
                margin-bottom: 15px;
            }

            .trip-details .image-container img {
                height: 100%;
                object-fit: cover;
            }

            .trip-details .image-overlay h2 {
                font-size: 2rem;
                /* Smaller title font size */
            }

            .trip-details .image-overlay p {
                font-size: 0.9rem;
                /* Smaller description font size */
            }

            .trip-details .details-grid {
                grid-template-columns: 1fr;
                /* Stack the columns vertically on mobile */
                gap: 20px;
            }

            /* Booking Info Box */
            .trip-details .booking-info-box {
                padding: 15px;
            }

            .trip-details .booking-info-box .price {
                font-size: 1.3em;
            }

            .trip-details .booking-info-box .button.book-now-btn {
                padding: 10px 20px;
                font-size: 1em;
            }

            .trip-details .booking-info-box p.need-help {
                font-size: 0.8em;
            }

            /* Calendar Modal */
            .calendar-content {
                width: 90%;
            }

            /* Image Slider */
            .image-slider img {
                height: 100%;
                /* Ensure image slider images are responsive */
                max-width: 100%;
            }

            /* Adjust calendar days size */
            .calendar-day {
                padding: 6px;
                font-size: 0.8em;
            }

            #selected-date-display {
                font-size: 0.9em;
            }
        }

        @media (max-width: 480px) {

            /* Further adjustments for very small screens like phones */
            .trip-details .image-overlay h2 {
                font-size: 1.3rem;
                /* Even smaller title */
                margin-left: 0px;
                margin-right: 28px;
            }

            .trip-details .image-overlay p {
                font-size: 0.8rem;
                /* Smaller description */
                margin-left: 0px;
                margin-right: 28px;
            }

            .trip-details .booking-info-box .price {
                font-size: 1.2em;
            }

            .trip-details .booking-info-box .button.book-now-btn {
                padding: 8px 15px;
                font-size: 0.9em;
            }

            .trip-details .booking-info-box h3 {
                font-size: 1em;
            }

            .trip-details .booking-info-box .button.book-now-btn {
                width: 100%;
                /* Make "Book Now" button full width on smaller screens */
            }

            /* Calendar Modal */
            .calendar-content {
                width: 80%;
            }

            .calendar-body {
                grid-template-columns: repeat(7, 1fr);
                /* Calendar days should be responsive */
            }

            .calendar-day {
                padding: 4px;
                font-size: 0.9em;
            }

            #selected-date-display {
                font-size: 0.8em;
            }
        }
    </style>
</head>

<body>
    <%- include('partials/header') %>

        <div class="container trip-details">
            <div class="image-container">
                <div class="image-overlay">
                    <h2>
                        <%= trip.name %>
                    </h2>
                    <p>
                        <%= trip.description.substring(0, 150) %>
                    </p>
                </div>
                <div class="image-slider">
                    <% if (trip.images && trip.images.length> 0) { %>
                        <% trip.images.forEach(image=> { %>
                            <img src="<%= image %>" alt="<%= trip.name %> Banner">
                            <% }); %>
                                <% } else if (trip.image) { %>
                                    <img src="<%= trip.image %>" alt="<%= trip.name %>">
                                    <% } %>
                </div>
            </div>

            <div class="details-grid">
                <div class="itinerary-box">
                    <h2>Trip Details</h2>
                    <% if (trip.details && Object.keys(trip.details).length> 0) { %>
                        <ul>
                            <% for (const key in trip.details) { %>
                                <li><strong>
                                        <%= key %>:
                                    </strong>
                                    <%= trip.details[key] %>
                                </li>
                            <% } %>
                        </ul>
                    <% } else { %>
                        <p>Detailed trip information will be provided soon.</p>
                    <% } %>

                    <!-- Google Maps Embed -->
                    <% 
                        let mapLocation = '';

                        // Priority 0: explicit mapLocation field
                        if (trip.mapLocation) {
                            mapLocation = trip.mapLocation;
                        }
                        // Priority 1: Use Region from details
                        else if (trip.details && trip.details.Region) {
                            mapLocation = trip.details.Region;
                        } 
                        // Priority 2: Use city and/or country
                        else if (trip.city || trip.country) {
                            mapLocation = (trip.city ? trip.city : '') + (trip.country ? ',' + trip.country : '');
                        }
                        // Priority 3: Try to extract from itinerary
                        else if (trip.itinerary && trip.itinerary.length > 0) {
                            const firstDay = trip.itinerary[0];
                            const cityMatch = firstDay.match(/(?:in|to)\s+([A-Z][a-zA-Z\s]+?)(?:\s+&|\s+-|$)/);
                            if (cityMatch) {
                                mapLocation = cityMatch[1].trim();
                            }
                        }
                    %>
                    <% if (mapLocation) { %>
                        <div class="map-box" style="margin: 20px 0;">
                            <h2 style="color: hsl(190 80% 45%);">Location Map</h2>
                            <iframe
                                width="100%"
                                height="300"
                                style="border:0; border-radius:8px;"
                                loading="lazy"
                                allowfullscreen
                                referrerpolicy="no-referrer-when-downgrade"
                                src="https://www.google.com/maps?q=<%= encodeURIComponent(mapLocation) %>&output=embed">
                            </iframe>
                        </div>
                    <% } %>

                    <!-- Weather Info -->
                    <% if (weather && weather.weather && weather.main) { %>
                        <div class="weather-box" style="margin: 20px 0; padding: 15px; background: #eaf6fb; border-radius: 8px;">
                            <h2 style="color: hsl(190 80% 45%);">Current Weather in <%= trip.weatherLocation || trip.details?.Region || weather.name || 'Destination' %></h2>
                            <p style="font-size: 1.2em;">
                                <strong><%= weather.weather[0].main %></strong> - <%= weather.weather[0].description %><br>
                                <strong>Temperature:</strong> <%= weather.main.temp %>°C<br>
                                <strong>Feels Like:</strong> <%= weather.main.feels_like %>°C<br>
                                <strong>Humidity:</strong> <%= weather.main.humidity %>%<br>
                                <strong>Wind:</strong> <%= weather.wind.speed %> m/s
                            </p>
                        </div>
                    <% } else { %>
                        <div class="weather-box" style="margin: 20px 0; padding: 15px; background: #ffeaea; border-radius: 8px; color: #a33;">
                            <strong>Weather info not available for this destination.</strong>
                        </div>
                    <% } %>

                    <br>
                    <h2>Itinerary</h2>
                    <% if (trip.itinerary && trip.itinerary.length> 0) { %>
                        <ul>
                            <% trip.itinerary.forEach(item=> { %>
                                <li>
                                    <%= item %>
                                            </li>
                                            <% }); %>
                                    </ul>
                                    <% } else { %>
                                        <p>Itinerary details will be provided soon.</p>
                                        <% } %>

                </div>

                <div class="booking-info-box">
                    <p class="price">₹<span>
                            <%= trip.price %>
                        </span> INR
                    </p>
                    <% if (exchangeRates && exchangeRates.conversion_rates) { %>
                        <div class="exchange-box" style="margin: 10px 0; padding: 10px; background: #f3f6ff; border-radius: 8px;">
                            <strong>Equivalent Price:</strong><br>
                            $<%= (trip.price * exchangeRates.conversion_rates.USD).toFixed(2) %> USD<br>
                            €<%= (trip.price * exchangeRates.conversion_rates.EUR).toFixed(2) %> EUR<br>
                            £<%= (trip.price * exchangeRates.conversion_rates.GBP).toFixed(2) %> GBP
                        </div>
                    <% } else { %>
                        <div class="exchange-box" style="margin: 10px 0; padding: 10px; background: #ffeaea; border-radius: 8px; color: #a33;">
                            <strong>Currency exchange rates not available.</strong>
                        </div>
                    <% } %>
                        </span> Per Person</p>
                    <h3>Ready for an adventure?</h3>
                    <% if (user) { %>
                        <button class="button book-now-btn" onclick="openCalendarModal()">Book Now</button>
                        <div id="selected-date-display"></div>
                        <form id="booking-form" action="/bookings/payment" method="POST" style="margin-top: 10px;">
                            <input type="hidden" name="tripId" value="<%= trip._id %>">
                            <input type="hidden" id="selectedDate" name="selectedDate">
                            <button type="submit" class="button primary" disabled
                                onclick="return checkDateSelection()">Proceed to Payment</button>
                        </form>
                        <% } else { %>
                            <p><a href="/auth/set-redirect?redirectTo=<%= currentUrl %>"
                                    style="color: hsl(190 80% 45%);text-decoration: none;">Log in</a> to book this
                                adventure.</p>
                            <% } %>
                                <p class="need-help" style="color: hsl(190 80% 45%);">Need help? <a
                                        href="/contact">Contact Us</a></p>
                </div>
            </div>
        </div>

        <div id="calendar-modal">
            <div class="calendar-content">
                <div class="calendar-header">
                    <button onclick="prevMonth()">&#8249;</button>
                    <h2 id="current-month"></h2>
                    <button onclick="nextMonth()">&#8250;</button>
                </div>
                <div id="calendar-body" class="calendar-body"></div>
                <button class="button" onclick="closeCalendarModal()">Close</button>
            </div>
        </div>

        <%- include('partials/footer') %>

            <script>
                // Calendar modal script
                const calendarModal = document.getElementById('calendar-modal');
                const calendarBody = document.getElementById('calendar-body');
                const currentMonthDisplay = document.getElementById('current-month');
                const selectedDateInput = document.getElementById('selectedDate');
                const proceedToPaymentButton = document.querySelector('#booking-form button[type="submit"]');
                const selectedDateDisplay = document.getElementById('selected-date-display');
                let currentDate = new Date();
                let selectedDate = null;

                function openCalendarModal() {
                    currentDate = new Date();
                    renderCalendar();
                    calendarModal.style.display = 'flex';
                }

                function closeCalendarModal() {
                    calendarModal.style.display = 'none';
                }

                function renderCalendar() {
                    calendarBody.innerHTML = '';
                    const year = currentDate.getFullYear();
                    const month = currentDate.getMonth();
                    const firstDayOfMonth = new Date(year, month, 1);
                    const lastDayOfMonth = new Date(year, month + 1, 0);
                    const daysInMonth = lastDayOfMonth.getDate();
                    const startingDay = firstDayOfMonth.getDay();

                    const now = new Date();
                    const today = new Date(now.getFullYear(), now.getMonth(), now.getDate());

                    const monthNames = ["January", "February", "March", "April", "May", "June",
                        "July", "August", "September", "October", "November", "December"
                    ];
                    currentMonthDisplay.textContent = monthNames[month] + ' ' + year;

                    for (let i = 0; i < startingDay; i++) {
                        const emptyCell = document.createElement('div');
                        calendarBody.appendChild(emptyCell);
                    }

                    for (let day = 1; day <= daysInMonth; day++) {
                        const date = new Date(year, month, day);
                        const dayCell = document.createElement('div');
                        dayCell.classList.add('calendar-day');
                        dayCell.textContent = day;

                        if (date < today) {
                            dayCell.classList.add('disabled');
                        } else {
                            dayCell.addEventListener('click', function () {
                                document.querySelectorAll('.calendar-day.selected').forEach(selected => {
                                    selected.classList.remove('selected');
                                });
                                this.classList.add('selected');
                                selectedDate = `${year}-${(month + 1).toString().padStart(2, '0')}-${day.toString().padStart(2, '0')}`;
                                selectedDateInput.value = selectedDate;
                                selectedDateDisplay.textContent = 'Selected Date: ' + new Date(selectedDate).toLocaleDateString();
                                proceedToPaymentButton.disabled = false;
                            });
                        }
                        calendarBody.appendChild(dayCell);
                    }
                }

                function prevMonth() {
                    currentDate.setMonth(currentDate.getMonth() - 1);
                    renderCalendar();
                }

                function nextMonth() {
                    currentDate.setMonth(currentDate.getMonth() + 1);
                    renderCalendar();
                }

                window.addEventListener('click', function (event) {
                    if (event.target == calendarModal) {
                        closeCalendarModal();
                    }
                });

                function checkDateSelection() {
                    const errorDisplay = document.getElementById('selected-date-display'); // Using the same display element for simplicity
                    if (!selectedDate) {
                        errorDisplay.textContent = 'Please select dates from "Book Now" before proceeding.';
                        errorDisplay.style.color = 'red';
                        return false; // Prevent form submission
                    }
                    errorDisplay.textContent = 'Selected Date: ' + new Date(selectedDate).toLocaleDateString(); // Reset the display if date is selected
                    errorDisplay.style.color = 'green';
                    return true; // Allow form submission
                }

                // Image slider script
                document.addEventListener('DOMContentLoaded', function () {
                    const slider = document.querySelector('.image-slider');
                    const images = slider.querySelectorAll('img');
                    const overlay = document.querySelector('.image-overlay');
                    let currentIndex = 0;
                    const intervalTime = 3000; // Time between slides in milliseconds

                    // Ensure overlay is on top initially
                    overlay.style.zIndex = '10';

                    function showImage(index) {
                        images.forEach(img => {
                            img.classList.remove('active');
                        });
                        if (images.length > 0) {
                            images[index].classList.add('active');
                        }
                    }

                    function nextSlide() {
                        currentIndex = (currentIndex + 1) % images.length;
                        showImage(currentIndex);
                    }

                    if (images.length > 1) {
                        showImage(currentIndex);
                        setInterval(nextSlide, intervalTime);
                    } else if (images.length === 1) {
                        showImage(currentIndex); // Just show the single image
                    } else {
                        // Handle case with no images, maybe show a default background or message
                        slider.style.background = '#eee'; // Example fallback
                        if (overlay) {
                            overlay.style.position = 'absolute';
                            overlay.style.bottom = 'auto';
                            overlay.style.top = '50%';
                            overlay.style.transform = 'translateY(-50%)';
                            overlay.style.textAlign = 'center';
                        }
                    }
                });
            </script>
</body>

</html>